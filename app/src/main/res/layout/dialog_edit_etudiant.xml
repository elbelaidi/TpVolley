<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    android:fillViewport="true"
    tools:context=".ListEtudiantsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Student"
            android:textSize="26sp"
            android:textColor="#1E1E2F"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photo"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_marginBottom="8dp" />

            <ImageView
                android:id="@+id/editPhotoImageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_placeholder"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/editTakePhotoButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a Photo"
                android:layout_gravity="center"
                android:backgroundTint="#48cdcd"
                android:textColor="#fff"
                android:layout_marginBottom="16dp" />

            <!-- Name -->
            <TextView
                android:text="Name"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editNomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="#########"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:textColor="#000" />

            <TextView
                android:text="Surname"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/editPrenomEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="#########"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:textColor="#000" />

            <TextView
                android:text="Date of Birth"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/editDateNaissanceTextView"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:text="Select a Date"
                    android:textColor="#000" />

                <Button
                    android:id="@+id/editSelectDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Choose"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#48cdcd"
                    android:textColor="#fff" />
            </LinearLayout>

            <!-- Gender -->
            <TextView
                android:text="Gender"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/editSexeRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp">

                <RadioButton
                    android:id="@+id/editHommeRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textColor="#1E1E2F" />

                <RadioButton
                    android:id="@+id/editFemmeRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:layout_marginStart="24dp"
                    android:textColor="#1E1E2F" />
            </RadioGroup>

            <!-- City -->
            <TextView
                android:text="City"
                android:textStyle="bold"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/editVilleSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginTop="24dp"
                android:backgroundTint="#1CC92B"
                android:textColor="#fff"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
